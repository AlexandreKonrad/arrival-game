{
  "name": "server",
  "version": "1.0.0",
  "description": "arrival game backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "knex": "node --import tsx/esm ./node_modules/knex/bin/cli.js",
    "test": "npm run test:setup && npm run test:migrate && npm run test:run",
    "test:setup": "tsx tests/utils/scripts/setup-test-db.ts",
    "test:migrate": "dotenv -e .env.test -- knex migrate:latest",
    "test:run": "dotenv -e .env.test -- vitest run"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  },
  "overrides": {
    "minimatch": "^10.2.1",
    "ajv": "^8.18.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "dotenv": "^16.3.1",
    "fastify": "^5.7.4",
    "knex": "^3.1.0",
    "knex-stringcase": "^1.6.0",
    "nanoid": "^5.1.6",
    "pg": "^8.17.1",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  }
}
