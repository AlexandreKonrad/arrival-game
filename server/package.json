{
  "name": "server",
  "version": "1.0.0",
  "description": "arrival game backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "knex": "node --import tsx/esm ./node_modules/knex/bin/cli.js",
    "test": "tsx scripts/setup-test-db.ts && npm run test:migrate && dotenv -e .env.test -- vitest run",
    "test:migrate": "dotenv -e .env.test -- knex migrate:latest",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/jwt": "^8.0.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "knex": "^3.1.0",
    "knex-stringcase": "^1.6.0",
    "nanoid": "^5.1.6",
    "pg": "^8.17.1",
    "zod": "^3.22.4"
  }
}
